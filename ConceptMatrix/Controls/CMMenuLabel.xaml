<UserControl x:Class="ConceptMatrix.Controls.CMMenuLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConceptMatrix.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="27" d:DesignWidth="182">
    <Grid Margin="0,0,0,0" Background="#354052">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock x:Name="iconBox" Margin="18,1.8,7,0"
                       FontSize="12" Text="&#xF021;" Foreground="#596476"
                       FontFamily="/Resources/#FontAwesome">
            </TextBlock>
            <TextBlock x:Name="contentBox"
                       FontSize="10.5" Text="Content Text" Foreground="#596476"
                       FontFamily="Microsoft YaHei">
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
